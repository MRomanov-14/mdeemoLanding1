        teamCards.forEach((card, i) => {
            gsap.to(card, {
                scrollTrigger: {
                    trigger: card,
                    start: 'top 88%',
                    toggleActions: 'play none none none',
                },
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: i * 0.1,
                ease: 'power2.out',
            });
        });

        // Values Section
        gsap.timeline({
            scrollTrigger: {
                trigger: '#values-section',
                start: 'top 80%',
            },
        })
        .to('#values-title', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: 'power2.out',
        })
        .to('#values-divider', {
            scaleX: 1,
            duration: 0.8,
            ease: 'power4.inOut',
        }, '-=0.4');

        // Value Cards
        const valueCards = document.querySelectorAll('.value-card');
        valueCards.forEach((card, i) => {
            gsap.to(card, {
                scrollTrigger: {
                    trigger: card,
                    start: 'top 88%',
                    toggleActions: 'play none none none',
                },
                opacity: 1,
                y: 0,
                duration: 0.7,
                delay: i * 0.15,
                ease: 'power2.out',
            });
        });

        // CTA Fade In
        gsap.to('#cta-card', {
            scrollTrigger: {
                trigger: '#cta-section',
                start: 'top 75%',
            },
            opacity: 1,
            duration: 0.8,
            ease: 'power2.out',
        });
    </script>
