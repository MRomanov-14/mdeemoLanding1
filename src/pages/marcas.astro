---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CLICK Logística | Nuestras Marcas">
    <!-- Hero Section -->
    <section
        class="relative min-h-[60vh] flex flex-col justify-start items-center overflow-hidden bg-brand-black pt-48 pb-20">
        <!-- Radial Gradient Overlay -->
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-brand-primary/10 via-brand-black/50 to-brand-black pointer-events-none">
        </div>

        <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
            <h1 class="text-3xl md:text-5xl font-black tracking-tight text-white mb-6 leading-tight font-[Outfit]">
                ECOSISTEMA DE<br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary via-yellow-200 to-brand-primary">MARCAS</span>
            </h1>

            <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-400 font-light leading-relaxed mb-8">
                Soluciones especializadas que convergen para cubrir cada aspecto de tu operación.
            </p>
        </div>
    </section>

    <!-- Brands Carousel Section -->
    <section class="py-24 bg-black relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-6 mb-16 text-center">
            <h2 class="text-3xl font-bold text-white mb-4 font-['Outfit']">Nuestras Alianzas</h2>
            <div class="w-24 h-1 bg-brand-primary mx-auto rounded-full"></div>
            <p class="mt-4 text-gray-400 max-w-2xl mx-auto">Empresas líderes que confían en nuestra infraestructura
                logística.</p>
        </div>

        <!-- Carousel Container -->
        <div class="relative flex overflow-x-hidden group">
            <!-- Gradient Masks for seamless fade effect -->
            <div
                class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-black to-transparent z-10 pointer-events-none">
            </div>
            <div
                class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-black to-transparent z-10 pointer-events-none">
            </div>

            <div class="animate-scroll-left flex gap-16 whitespace-nowrap py-4 hover:[animation-play-state:paused]">
                <!-- Set 1 -->
                <div class="flex items-center gap-16">
                    <div onclick="openBrandModal('PASAREX')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-black text-white group-hover/card:text-brand-primary transition-colors tracking-tighter">PASAREX</span>
                    </div>
                    <div onclick="openBrandModal('QUICK')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-4xl font-black italic text-white group-hover/card:text-brand-primary transition-colors tracking-wide font-sans">QUICK</span>
                    </div>
                    <div onclick="openBrandModal('GEODIS')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-bold text-white group-hover/card:text-brand-primary transition-colors tracking-[0.2em] font-['Inter']">GEODIS</span>
                    </div>
                </div>

                <!-- Set 2 -->
                <div class="flex items-center gap-16">
                    <div onclick="openBrandModal('PASAREX')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-black text-white group-hover/card:text-brand-primary transition-colors tracking-tighter">PASAREX</span>
                    </div>
                    <div onclick="openBrandModal('QUICK')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-4xl font-black italic text-white group-hover/card:text-brand-primary transition-colors tracking-wide font-sans">QUICK</span>
                    </div>
                    <div onclick="openBrandModal('GEODIS')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-bold text-white group-hover/card:text-brand-primary transition-colors tracking-[0.2em] font-['Inter']">GEODIS</span>
                    </div>
                </div>

                <!-- Set 3 -->
                <div class="flex items-center gap-16">
                    <div onclick="openBrandModal('PASAREX')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-black text-white group-hover/card:text-brand-primary transition-colors tracking-tighter">PASAREX</span>
                    </div>
                    <div onclick="openBrandModal('QUICK')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-4xl font-black italic text-white group-hover/card:text-brand-primary transition-colors tracking-wide font-sans">QUICK</span>
                    </div>
                    <div onclick="openBrandModal('GEODIS')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-bold text-white group-hover/card:text-brand-primary transition-colors tracking-[0.2em] font-['Inter']">GEODIS</span>
                    </div>
                </div>

                <!-- Set 4 -->
                <div class="flex items-center gap-16">
                    <div onclick="openBrandModal('PASAREX')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-black text-white group-hover/card:text-brand-primary transition-colors tracking-tighter">PASAREX</span>
                    </div>
                    <div onclick="openBrandModal('QUICK')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-4xl font-black italic text-white group-hover/card:text-brand-primary transition-colors tracking-wide font-sans">QUICK</span>
                    </div>
                    <div onclick="openBrandModal('GEODIS')"
                        class="flex flex-col items-center justify-center px-10 py-6 border border-white/10 rounded-2xl bg-white/5 hover:border-brand-primary/50 hover:bg-white/10 transition-all duration-300 w-72 h-40 group/card cursor-pointer">
                        <span
                            class="text-3xl font-bold text-white group-hover/card:text-brand-primary transition-colors tracking-[0.2em] font-['Inter']">GEODIS</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal de Marcas -->
    <div id="brandModal" class="fixed inset-0 z-[100] hidden" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="absolute inset-0 bg-black/90 backdrop-blur-md transition-opacity opacity-0" id="modalBackdrop"></div>

        <!-- Modal Content -->
        <div class="absolute inset-0 flex items-center justify-center p-4">
            <div class="bg-brand-dark border border-white/10 rounded-3xl shadow-2xl max-w-4xl w-full transform scale-95 opacity-0 transition-all duration-300 relative overflow-hidden flex flex-col md:flex-row"
                id="modalContent">

                <!-- Close Button -->
                <button onclick="closeBrandModal()"
                    class="absolute top-4 right-4 text-white/50 hover:text-white transition-colors z-20 w-10 h-10 flex items-center justify-center rounded-full bg-black/50 hover:bg-brand-primary hover:text-black backdrop-blur-sm">
                    <i class="fa-solid fa-xmark text-lg"></i>
                </button>

                <!-- Image Section (Left) -->
                <div class="w-full md:w-1/2 h-64 md:h-auto relative overflow-hidden">
                    <div class="absolute inset-0 bg-brand-primary/20 mix-blend-overlay z-10"></div>
                    <img id="modalImage" src="" alt="Brand Image"
                        class="w-full h-full object-cover transition-transform duration-700 hover:scale-110">
                </div>

                <!-- Content Section (Right) -->
                <div class="w-full md:w-1/2 p-8 md:p-12 relative flex flex-col justify-center">
                    <!-- Brand Name -->
                    <h3 id="modalTitle"
                        class="text-4xl md:text-5xl font-black text-white mb-2 font-['Outfit'] tracking-tight"></h3>
                    <div class="w-20 h-1.5 bg-brand-primary rounded-full mb-8"></div>

                    <!-- Achievements List -->
                    <div class="space-y-6">
                        <h4 class="text-xl font-semibold text-white/90 mb-4 flex items-center gap-2">
                            <i class="fa-solid fa-trophy text-brand-primary"></i>
                            Impacto & Logros
                        </h4>
                        <ul id="modalAchievements" class="space-y-4">
                            <!-- Achievements will be populated by JS -->
                        </ul>
                    </div>

                    <div class="mt-10 pt-6 border-t border-white/10 flex justify-end">
                        <button onclick="closeBrandModal()"
                            class="group flex items-center gap-2 text-brand-primary font-bold hover:text-white transition-colors">
                            Cerrar
                            <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                        </button>
                    </div>

                    <!-- Decorative Background -->
                    <div
                        class="absolute top-0 right-0 w-64 h-64 bg-brand-primary/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script is:inline>
        const brandData = {
            'PASAREX': {
                image: "https://images.unsplash.com/photo-1586864387967-d02ef85d93e8?q=80&w=800&auto=format&fit=crop",
                achievements: [
                    { text: "Reducción del 40% en tiempos de entrega mediante algoritmos de ruta IA propios.", icon: "fa-solid fa-route" },
                    { text: "Implementación de flota 100% eléctrica en zonas urbanas, reduciendo 50 toneladas de CO2.", icon: "fa-solid fa-leaf" },
                    { text: "Tasa de efectividad de entrega del 99.8% durante la temporada alta de 2024.", icon: "fa-solid fa-chart-line" }
                ]
            },
            'QUICK': {
                image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=80&w=800&auto=format&fit=crop",
                achievements: [
                    { text: "Desarrollo de Torre de Control 24/7 con visibilidad 360° para operaciones críticas.", icon: "fa-solid fa-tower-broadcast" },
                    { text: "Gestión exitosa de logística inversa, recuperando el 15% del valor de activos para clientes.", icon: "fa-solid fa-rotate-left" },
                    { text: "Distribución farmacéutica nacional con cumplimiento certificado de cadena de frío.", icon: "fa-solid fa-temperature-snowflake" }
                ]
            },
            'GEODIS': {
                image: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=800&auto=format&fit=crop",
                achievements: [
                    { text: "Optimización de almacén con robótica autónoma, aumentando el throughput en un 200%.", icon: "fa-solid fa-robot" },
                    { text: "Gestión aduanera integral reduciendo tiempos de liberación de carga en 48 horas.", icon: "fa-solid fa-file-contract" },
                    { text: "Premio a la Excelencia Operativa Global por proyectos de distribución sostenible.", icon: "fa-solid fa-award" }
                ]
            }
        };

        function openBrandModal(brandName) {
            const modal = document.getElementById('brandModal');
            const backdrop = document.getElementById('modalBackdrop');
            const content = document.getElementById('modalContent');
            const title = document.getElementById('modalTitle');
            const image = document.getElementById('modalImage');
            const list = document.getElementById('modalAchievements');

            if (!brandData[brandName]) return;

            const data = brandData[brandName];

            // Populate Data
            title.textContent = brandName;
            image.src = data.image; // Set the image

            list.innerHTML = data.achievements
                .map((item, index) => `
                    <li class="flex items-start gap-4 text-gray-300 group/item" style="animation-delay: \${index * 100}ms">
                        <div class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center shrink-0 group-hover/item:bg-brand-primary group-hover/item:text-black transition-all duration-300">
                            <i class="\${item.icon} text-lg animate-pulse-slow"></i>
                        </div>
                        <span class="mt-2 text-sm md:text-base leading-relaxed">\${item.text}</span>
                    </li>
                `).join('');

            // Show Modal
            modal.classList.remove('hidden');

            // Animate In (small delay to allow display:block to apply)
            requestAnimationFrame(() => {
                backdrop.classList.remove('opacity-0');
                content.classList.remove('scale-95', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            });

            // Prevent body scroll
            document.body.style.overflow = 'hidden';
        }

        function closeBrandModal() {
            const modal = document.getElementById('brandModal');
            const backdrop = document.getElementById('modalBackdrop');
            const content = document.getElementById('modalContent');

            // Animate Out
            backdrop.classList.add('opacity-0');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');

            // Hide after animation (300ms matches CSS transition)
            setTimeout(() => {
                modal.classList.add('hidden');
                document.body.style.overflow = '';
            }, 300);
        }

        // Close on visual backdrop click
        document.getElementById('modalBackdrop').addEventListener('click', closeBrandModal);
        
        // Close on ESC key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeBrandModal();
        });

        window.openBrandModal = openBrandModal;
        window.closeBrandModal = closeBrandModal;
    </script>
</Layout>
