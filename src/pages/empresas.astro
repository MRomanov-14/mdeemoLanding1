---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CLICK Logística | Soluciones Empresariales" description="Encuentra el mejor talento para tu empresa con Click Logística. Especialistas en reclutamiento y posicionamiento de personal operativo." >
    <!-- Hero Section -->
    <section
        class="hero-critical relative min-h-[80vh] flex flex-col justify-start items-center overflow-hidden bg-[var(--color-bg)] pt-48 pb-20">
        <!-- Background Grid -->
        <div
            class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] opacity-20 pointer-events-none">
        </div>

        <!-- Radial Gradient Overlay -->
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-brand-primary/20 via-[var(--color-bg)] to-[var(--color-bg)] pointer-events-none">
        </div>

        <div class="relative z-10 max-w-7xl mx-auto px-6 text-center text-[var(--color-text)]">
            <div
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-primary/10 border border-brand-primary/20 text-brand-primary text-sm font-semibold mb-8 animate-float backdrop-blur-md">
                <span class="w-2 h-2 rounded-full bg-brand-primary animate-pulse"></span>
                Soluciones B2B de Alto Impacto
            </div>

            <h1
                class="h1-critical text-4xl md:text-7xl font-black tracking-tight text-[var(--color-text)] mb-6 leading-tight font-[Outfit]">
                EL TALENTO QUE<br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary via-brand-primary/60 to-brand-primary">IMPULSA TU ÉXITO</span>
            </h1>

            <p class="p-critical mt-4 max-w-2xl mx-auto text-lg md:text-xl text-[var(--color-text-muted)] font-light leading-relaxed mb-8">
                Conectamos tu operación con el <span class="text-[var(--color-text)] font-semibold">mejor capital humano</span> del país. Gestión inteligente para empresas que no se detienen.
            </p>

            <div class="mt-4 flex flex-col sm:flex-row gap-4 justify-center">
                <button onclick="document.getElementById('solicitud').scrollIntoView({behavior: 'smooth'})"
                    class="px-10 py-4 bg-brand-primary text-black font-bold rounded-full shadow-[0_0_20px_rgba(234,179,8,0.3)] hover:shadow-[0_0_30px_rgba(234,179,8,0.5)] transition-all transform hover:-translate-y-1 flex items-center justify-center gap-2">
                    Cotizar Ahora <i class="fa-solid fa-paper-plane"></i>
                </button>
                <button onclick="document.getElementById('beneficios').scrollIntoView({behavior: 'smooth'})"
                    class="px-10 py-4 bg-transparent border border-[var(--color-border)] text-[var(--color-text)] font-bold rounded-full hover:bg-[var(--color-surface)] transition-all">
                    Ver Beneficios
                </button>
            </div>
        </div>
    </section>

    <!-- Social Proof Ticker -->
    <div class="bg-[var(--color-bg)] py-12 border-y border-[var(--color-border)] overflow-hidden relative">
        <div class="max-w-7xl mx-auto px-6 mb-8 text-center">
            <p class="text-sm font-bold text-[var(--color-text-muted)] uppercase tracking-[0.2em]">Empresas que confían en nosotros</p>
        </div>
        <div class="flex overflow-x-hidden group whitespace-nowrap">
            <div class="animate-scroll-left flex gap-12 md:gap-24 items-center py-4">
                <!-- Brand Items -->
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase tracking-[0.2em] whitespace-nowrap">GEODIS</span>
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase tracking-wide whitespace-nowrap">OLFABRAND</span>
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase tracking-tighter whitespace-nowrap">361° LOGÍSTICA</span>
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase tracking-wide whitespace-nowrap">ALCOMEX</span>
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase italic tracking-wide whitespace-nowrap">QUICK</span>
                <span class="text-2xl md:text-4xl font-black text-[var(--color-text-muted)] hover:text-brand-primary transition-colors cursor-default opacity-50 hover:opacity-100 uppercase tracking-tight whitespace-nowrap">ARTE LITOGRÁFICO</span>
