    <script>
        // Proceso Timeline Animation
        document.addEventListener('DOMContentLoaded', () => {
            const steps = document.querySelectorAll('.proceso-step');
            const progressLine = document.querySelector('.timeline-line-progress');

            if (!steps.length) return;

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const section = entry.target;
                        const allSteps = section.querySelectorAll('.proceso-step');
                        allSteps.forEach((step, i) => {
                            setTimeout(() => {
                                step.classList.add('visible');
                            }, i * 200);
                        });

                        // Animate the progress line
                        if (progressLine) {
                            setTimeout(() => {
                                progressLine.style.width = '100%';
                            }, 300);
                        }

                        observer.unobserve(section);
                    }
                });
            }, { threshold: 0.2 });

            const timelineSection = document.querySelector('#proceso');
            if (timelineSection) observer.observe(timelineSection);
        });
    </script>
