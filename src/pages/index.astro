    <script>
        // Modal Logic
        const modal = document.getElementById('termsModal');
        const overlay = document.getElementById('modalOverlay');
        const closeBtn = document.getElementById('closeTermsBtn');
        const acceptBtn = document.getElementById('acceptTermsBtn');
        const modalContent = document.getElementById('modalContent');
        const check = document.getElementById('terms-recruitment');

        // Expose openTermsModal to global scope as it is called inline
        window['openTermsModal'] = function() {
            if (modal) modal.classList.remove('hidden');
            setTimeout(() => {
                if (modalContent) {
                    modalContent.classList.remove('opacity-0', 'scale-95');
                    modalContent.classList.add('opacity-100', 'scale-100');
                }
            }, 10);
        }

        function closeTermsModal() {
            if (modalContent) {
                modalContent.classList.remove('opacity-100', 'scale-100');
                modalContent.classList.add('opacity-0', 'scale-95');
            }
            setTimeout(() => {
                if (modal) modal.classList.add('hidden');
            }, 300);
        }

        function acceptTerms() {
            closeTermsModal();
            if (check && check instanceof HTMLInputElement) check.checked = true;
        }

        if (overlay) overlay.addEventListener('click', closeTermsModal);
        if (closeBtn) closeBtn.addEventListener('click', closeTermsModal);
        if (acceptBtn) acceptBtn.addEventListener('click', acceptTerms);
    </script>
